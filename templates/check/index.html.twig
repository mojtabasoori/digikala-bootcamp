{% extends 'base.html.twig' %}

{% block title %}Check index{% endblock %}

{% block body %}
    <h1>Check index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nam</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for check in checks %}
            <tr>
                <td>{{ check.id }}</td>
                <td>{{ check.nam }}</td>
                <td>
                    <a href="{{ path('app_check_show', {'id': check.id}) }}">show</a>
                    <a href="{{ path('app_check_edit', {'id': check.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_check_new') }}">Create new</a>
{% endblock %}
